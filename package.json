{
  "name": "ha-webrtc-sip-card",
  "version": "1.0.0",
  "description": "A modern WebRTC SIP client card for Home Assistant",
  "main": "dist/ha-webrtc-sip-card.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "vite build",
    "copy-to-root": "cp dist/* .",
    "build-and-copy": "npm run build && npm run copy-to-root",
    "dev": "vite --host 0.0.0.0 --port 3000",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "serve": "vite build && vite preview",
    "prepare": "npm run build",
    "release": "npm version patch && git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ahmed9190/ha-webrtc-sip-card.git"
  },
  "keywords": [
    "home-assistant",
    "custom-card",
    "webrtc",
    "sip",
    "voip",
    "hacs",
    "webphone",
    "video-call",
    "phone"
  ],
  "author": "Ahmed Waleed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ahmed9190/ha-webrtc-sip-card/issues"
  },
  "homepage": "https://github.com/Ahmed9190/ha-webrtc-sip-card#readme",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "typescript": "~5.3.3",
    "vite": "^5.2.8"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "lit": "^3.1.2",
    "sip.js": "^0.21.2"
  }
}
